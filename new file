declare 
 marks number;
 
begin 
 marks:=&marks;

if marks>=90 AND marks<=100 then
dbms_output.put_line('O');
elsif marks<90 AND marks>80 then
dbms_output.put_line('E');
elsif marks<80 AND marks>70 then
dbms_output.put_line('G');
else
dbms_output.put_line('F');

end if;
end;
/

Q2
-------------------------------------
declare 
 range number;
 i number;

begin
 range:=&range; 
for i in 1..range
loop
 if(i MOD 2=0) then
  dbms_output.put_line(i);
 end if;
end loop;
end;
/
 
Q3
------------------------------------
declare
num number;
i number;
factorial number;
begin

num:=&number;
factorial:=1;
if num<1 then
dbms_output.put_line('factorial does not exist');
end if;
--reverse number
for i in  1..num
loop
    factorial:=factorial*i;
end loop;

dbms_output.put_line(factorial);
end;
/



