Q5
-------------------------------
create table random_num(
rand_no number(20)
);

declare 
n number(20);
begin

  for i in 1..5
  loop
   n:=dbms_random.random();
   insert into random_num values(n);
   end loop;
end;
-----------------------------
Q6
-----------------------------
create table sphere(
rad number(2),
area number(10,2),
volume number(15,2)
);


declare 
a sphere.area%type;
v sphere.volume%type;
begin

  for i in 1..20
  loop
  a:=4*3.14*i*i;
  v:=4/3 * 3.14 *i*i*i;
   insert into sphere values(i,a,v);
   end loop;
end;
/

