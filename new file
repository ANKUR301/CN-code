Q4
--------------------
declare
n1 number;
n2 number;
n3 number;
counter number;


begin

n1:=0;
n2:=1;
n3:=0;
counter:=&counter;
for i in 1..counter
loop
  n3:=n1+n2;
 dbms_output.put_line(n3);
  n1:=n2;
  n2:=n3;
end loop;
end;
/
