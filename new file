Q7
-------------------------------
declare 
msid sailor.sid%type;
r sailor%rowtype;
begin
	msid:=&sailor_id;
	select * into r from sailor where sid=msid;
 dbms_output.put_line('sailor name '||r.sname||' '||r.mname||' '||r.surname);
 dbms_output.put_line('sailor rating '||r.rating);
 dbms_output.put_line('sailor age '||r.age);
end;
/

